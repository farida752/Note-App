<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF"

    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editting_text_view_title_text"
        android:text="Title"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_view_title"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editting_text_view_discription_text"
        android:text="Discreption"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edit_text_view_discription"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editting_text_view_deadline_text"
        android:text="Deadline"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_calendar"
        android:id="@+id/image_view_calender"
        android:layout_marginBottom="8dp"
        />


   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/editting_text_view_date"
       android:textColor="#3F51B5"
       android:textSize="18sp"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editting_text_view_priority_text"
        android:text="Priority"
        android:textColor="#03A9F4"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editting_text_view_priority"
        android:textColor="#3F51B5"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"
        android:text="1"
        android:layout_marginLeft="16dp"
        />
    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_picker"
        android:solidColor="#64B1C4"
        android:layout_marginBottom="16dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:background="#64B1C4"
        android:layout_marginTop="16dp"
        android:layout_gravity="end"
        android:id="@+id/button_save"
        />
</LinearLayout>
